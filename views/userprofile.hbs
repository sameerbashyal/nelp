<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4 box-shadow user-profile">
                <img class="card-img-top" data-src="/images/default_profile.jpg" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%;    border-radius: 60%; display: block;" src="/images/default_profile.jpg" data-holder-rendered="true">

                <form method="post" action="/users/updateProfilepicture" enctype="multipart/form-data">
                    <label class="custom-file">
                        <input type="file" id="file" name="profileimage" class="custom-file-input">
                        <span class="custom-file-control"></span>
                        <input type="submit" name="wp-submit" id="wp-submit" class="btn btn-brand btn-block mb-4" value="Post">
                    </label>
                </form>
                <div class="card-body">
                    <h6>   {{user.firstname }}  {{user.lastname}}

                 </h6>

                </div>
            </div>
        </div>

        <div class="col-md-8">
            <main id="main" class="site-main main">
                <section class="section">
                    <div class="container">
                        <div class="row">
                            <div class="container container--xs">
                                <div class="woocommerce">
                                    <div id="signup_div_wrapper">

                                        <p class="form-row form-row-wide"> {{#if errors}} {{#each errors}}
                                            <div class="invalid-feedback alert alert-danger">{{msg}}</div>
                                            {{/each}} {{/if}}
                                        </p>
                                        <form method="POST" class="register" novalidate="novalidate" action="/users/userprofile/{{user.id}}" enctype="multipart/form-data">
                                            <!-- Event Title -->
                                            <h4>Edit Profile</h4>
                                           <hr>
                                            <br>
                                            <div class="form-group row">
                                                <div class="col-sm-2 mb-4 mb-sm-0">
                                                    <label>Name<span class="required">*</span></label>

                                                </div>
                                                <div class="col-sm-10 mb-4 mb-sm-0">

                                                    <input type="text" class=" input-text" name="firstname" value="{{user.firstname}} ">
                                                </div>

                                            </div>

                                            <!-- Event Description>-->

                                            <div class="form-group row">
                                                <div class="col-sm-2 mb-4 mb-sm-0">
                                                    <label>Bio<span class="required">*</span></label>

                                                </div>
                                                <div class="col-sm-10 mb-4 mb-sm-0">

                                                    <textarea type="text" class="input-text form-control" name="user_bio" placeholder="User Details"> </textarea>
                                                </div>

                                            </div>

                                            <!-- Event Category -->


           <div class="form-group row">
                                                <div class="col-sm-2 mb-4 mb-sm-0">
                                                    <label>City<span class="required">*</span></label>

                                                </div>
                                                <div class="col-sm-10 mb-4 mb-sm-0">
                                                    <select class="form-control" id="inlineFormCustomSelect" name="city">
                                                        <option value="Butwal">Butwal</option>
                                                        <option value="Narayanghat">Narayanghat</option>
                                                        <option value="Biratnagar">Biratnagar</option>
                                                        <option value="Birjung">Birjung</option>
                                                        <option value="Kathmandu">Kathmandu</option>
                                                    </select>

                                                </div>

                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2 mb-4 mb-sm-0">
                                                    <label>Street<span class="required">*</span></label>

                                                </div>
                                                <div class="col-sm-10 mb-4 mb-sm-0">

                                                    <input type="text" class=" input-text" name="street" value=" ">
                                                </div>

                                            </div>

                                 

                                            <!-- Event City -->

                                            <div class="form-group row">
                                                <div class="col-sm-2 mb-4 mb-sm-0">
                                                    <label>Phone <span class="required">*</span></label>

                                                </div>
                                                <div class="col-sm-10 mb-4 mb-sm-0">

                                                    <input type="text" class=" input-text" name="phone">
                                                </div>

                                            </div>

                                            <!-- Event Organizer Details -->
                                            <div class="form-group row">
                                                <div class="col-sm-2 mb-4 mb-sm-0">
                                                    <label for="exampleSelect1">Gender</label>

                                                </div>
                                                <div class="col-sm-10 mb-4 mb-sm-0">

                                                    <div class="form-group">

                                                        <select class="form-control" id="exampleSelect1" name="gender">
                                                            <option>Male</option>
                                                            <option>Female</option>
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>

                                            <!-- Event Organizer Phone & websites -->

                                            <p class="form-row">
                                                {{!-- <input type="hidden" name="user_id" value="{{user.id}}"> --}}
    <input type="hidden" name="_method" value="PUT"/>
                                                <input type="submit" class="btn btn-brand btn-block btn-lg mb-4 mt-3" style="margin:0;" name="register" value="Update Profile">

                                            </p>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>

        </div>

    </div>
</div>

</div>